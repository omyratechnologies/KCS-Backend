# KCS Backend Production Environment Configuration
# Copy this file to .env and update with your actual values

NODE_ENV=production
PORT=4500

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-change-this

# AWS Configuration  
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_ACCESS_SECRET_KEY=your-aws-secret-access-key
AWS_REGION=ap-south-1

# AWS SES Configuration
AWS_SES_EMAIL_FROM=your-email@yourdomain.com
AWS_SES_EMAIL_FROM_NAME="Your App Name"

# R2 Bucket Configuration
R2_BUCKET=your-bucket-name
R2_ENDPOINT=https://your-r2-endpoint.r2.cloudflarestorage.com
R2_REGION=apac
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET_URL=https://your-r2-bucket-url.r2.dev/

# Redis Configuration
REDIS_URI=redis://username:password@your-redis-host:6379

# Couchbase Configuration
OTTOMAN_BUCKET_NAME=your-bucket-name
OTTOMAN_USERNAME=your-couchbase-username
OTTOMAN_PASSWORD=your-couchbase-password
OTTOMAN_CONNECTION_STRING=your-couchbase-host

# Payment Gateway Configuration
PAYMENT_CREDENTIAL_ENCRYPTION_KEY=your-32-character-encryption-key
PAYMENT_ENCRYPTION_ALGORITHM=aes-256-gcm
PAYMENT_CREDENTIAL_AUDIT_LOG=true

# Security Configuration
MAX_GATEWAY_TEST_FAILURES=5
GATEWAY_TEST_LOCKOUT_DURATION=15
CREDENTIAL_ROTATION_WARNING_DAYS=90

# WebRTC Meeting System Configuration
SOCKET_IO_PORT=4501

# MediaSoup WebRTC Configuration
MEDIASOUP_LISTEN_IP=0.0.0.0
MEDIASOUP_ANNOUNCED_IP=api.letscatchup-kcs.com
MEDIASOUP_MIN_PORT=40000
MEDIASOUP_MAX_PORT=40100
MEDIASOUP_WORKER_COUNT=4

# TURN/STUN Server Configuration
STUN_SERVER_URL=stun:stun.l.google.com:19302

# File Upload Configuration
MAX_FILE_SIZE=100MB
UPLOAD_DIR=/home/ubuntu/KCS-Backend/uploads
RECORDINGS_DIR=/home/ubuntu/KCS-Backend/recordings

# Performance Tuning
MAX_CONCURRENT_MEETINGS=1000
MAX_PARTICIPANTS_PER_MEETING=100
CONNECTION_TIMEOUT=30000
PING_TIMEOUT=60000
PING_INTERVAL=25000

# CORS Configuration
CORS_ORIGIN=https://api.letscatchup-kcs.com,https://app.letscatchup-kcs.com
ALLOWED_ORIGINS=https://api.letscatchup-kcs.com,https://app.letscatchup-kcs.com

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# WebRTC Security
ENABLE_RECORDING_ENCRYPTION=true
RECORDING_ENCRYPTION_KEY=your-recording-encryption-key

# Email Configuration
EMAIL_PROVIDER=smtp
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=465
SMTP_SECURE=true
EMAIL_USER=your-email-user
EMAIL_PASS=your-email-password
EMAIL_FROM=noreply@yourdomain.com

# Stream.io Configuration
GETSTREAM_API_KEY=your-getstream-api-key
GETSTREAM_API_SECRET=your-getstream-api-secret
