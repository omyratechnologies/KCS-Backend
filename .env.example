# üöÄ KCS Backend Environment Configuration
# Copy this file to .env and configure for your environment

# =============================================================================
# üìä ENVIRONMENT SETTINGS
# =============================================================================
NODE_ENV=development
PORT=4500

# =============================================================================
# üîë AUTHENTICATION & SECURITY
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# =============================================================================
# üóÑÔ∏è DATABASE CONFIGURATION
# =============================================================================
DATABASE_TYPE=mongodb
DATABASE_URL=mongodb://localhost:27017/kcs_backend
DATABASE_NAME=kcs_backend

# Alternative database configurations
# DATABASE_TYPE=postgresql
# DATABASE_URL=postgresql://username:password@localhost:5432/kcs_backend

# =============================================================================
# üìß EMAIL SERVICE
# =============================================================================
MAIL_SERVICE=gmail
MAIL_USER=your-email@gmail.com
MAIL_PASS=your-app-password
MAIL_FROM=your-email@gmail.com

# Alternative: SendGrid
# SENDGRID_API_KEY=your-sendgrid-api-key
# SENDGRID_FROM_EMAIL=noreply@yourschool.com

# =============================================================================
# ‚òÅÔ∏è AWS S3 CONFIGURATION
# =============================================================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=kcs-backend-storage

# =============================================================================
# üîÑ REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# üé• WEBRTC & MEETING CONFIGURATION
# =============================================================================
WEBRTC_ENABLED=true
MEDIA_SERVER_TYPE=mediasoup
MEDIA_SERVER_PORT=3000

# Kurento Media Server (alternative)
# KURENTO_WS_URL=ws://localhost:8888/kurento

# =============================================================================
# üí≥ PAYMENT GATEWAY
# =============================================================================
PAYMENT_GATEWAY=razorpay
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# Alternative: Stripe
# STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-key
# STRIPE_SECRET_KEY=sk_test_your-stripe-secret

# =============================================================================
# üì± MOBILE APP CONFIGURATION
# =============================================================================
ANDROID_APK_UPLOAD_ENABLED=true
APK_STORAGE_PATH=/uploads/apk/
MAX_APK_SIZE=100MB

# =============================================================================
# üîî NOTIFICATION SERVICES
# =============================================================================
PUSH_NOTIFICATION_ENABLED=true
FCM_SERVER_KEY=your-fcm-server-key
FCM_PROJECT_ID=your-firebase-project-id

# =============================================================================
# üìà MONITORING & LOGGING
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=json
ENABLE_REQUEST_LOGGING=true

# Performance monitoring
PERFORMANCE_MONITORING=true
METRICS_ENABLED=true

# =============================================================================
# üåê CORS & SECURITY
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# =============================================================================
# üîß CI/CD CONFIGURATION
# =============================================================================
CI_MODE=false
TEST_DATABASE_URL=mongodb://localhost:27017/kcs_backend_test
COVERAGE_THRESHOLD=10

# =============================================================================
# üöÄ DEPLOYMENT SETTINGS
# =============================================================================
DEPLOYMENT_ENV=development
HEALTH_CHECK_ENABLED=true
GRACEFUL_SHUTDOWN_TIMEOUT=10000

# =============================================================================
# üìÅ FILE UPLOAD LIMITS
# =============================================================================
MAX_FILE_SIZE=10MB
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png,gif

# =============================================================================
# üéì SCHOOL-SPECIFIC SETTINGS
# =============================================================================
DEFAULT_ACADEMIC_YEAR=2024-2025
DEFAULT_TIMEZONE=Asia/Kolkata
MULTI_CAMPUS_ENABLED=true

# =============================================================================
# üîê ADDITIONAL SECURITY
# =============================================================================
SESSION_SECRET=another-super-secret-for-sessions
ENCRYPTION_KEY=32-character-encryption-key-here
API_KEY_HEADER=X-API-Key

# =============================================================================
# üìä FEATURE FLAGS
# =============================================================================
FEATURE_ONLINE_CLASSES=true
FEATURE_PAYMENT_GATEWAY=true
FEATURE_MOBILE_APP=true
FEATURE_ANALYTICS=true
FEATURE_PARENT_PORTAL=true
