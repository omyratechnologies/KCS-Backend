# CI/CD Environment Configuration
# This file contains the minimal configuration required for CI/CD pipelines

NODE_ENV=test
PORT=4500
HOST=localhost

# Test Database (use in-memory or test database)
DATABASE_URL=mongodb://localhost:27017/kcs_backend_test
DATABASE_NAME=kcs_backend_test

# Test Redis
REDIS_URL=redis://localhost:6379
REDIS_DB=1

# Test JWT Secret
JWT_SECRET=test-jwt-secret-for-ci-cd-pipeline
JWT_EXPIRES_IN=1h

# Mock Email Configuration (for testing)
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=test@example.com
SMTP_PASS=test-password

# Mock AWS Configuration
AWS_ACCESS_KEY_ID=test-access-key
AWS_SECRET_ACCESS_KEY=test-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=test-bucket

# Mock Payment Configuration
RAZORPAY_KEY_ID=test-razorpay-key
RAZORPAY_KEY_SECRET=test-razorpay-secret

# Test WebRTC Configuration
WEBRTC_SECRET=test-webrtc-secret

# Socket.IO Test Configuration
SOCKET_IO_CORS_ORIGIN=http://localhost:3000

# Logging for CI
LOG_LEVEL=error
LOG_FILE_PATH=./logs/test.log

# Test File Upload
MAX_FILE_SIZE=1MB
ALLOWED_FILE_TYPES=jpg,png,pdf

# Rate Limiting for Tests
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# CORS for Testing
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# Health Check
HEALTH_CHECK_TIMEOUT=2000

# Disable external services in CI
MOCK_EXTERNAL_SERVICES=true
ANALYTICS_ENABLED=false

# Debug settings for CI
DEBUG=
HOT_RELOAD=false
