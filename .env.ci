# ðŸ¤– CI/CD Environment Configuration
# This file is used for Jenkins CI/CD pipeline

NODE_ENV=development
PORT=4500

# Minimal database configuration for CI
DATABASE_TYPE=memory
DATABASE_URL=memory://test
DATABASE_NAME=kcs_backend_ci

# Disable external services for CI
MAIL_SERVICE=mock
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
REDIS_URL=redis://localhost:6379

# CI-specific settings
CI_MODE=true
TEST_TIMEOUT=30000
MAX_WORKERS=1

# Disable features that require external services
WEBRTC_ENABLED=false
PAYMENT_GATEWAY=mock
PUSH_NOTIFICATION_ENABLED=false
PERFORMANCE_MONITORING=false

# Security (use mock values for CI)
JWT_SECRET=ci-test-secret-key-not-for-production
SESSION_SECRET=ci-session-secret
ENCRYPTION_KEY=ci-encryption-key-32-characters

# Logging for CI
LOG_LEVEL=error
ENABLE_REQUEST_LOGGING=false

# Coverage and testing
COVERAGE_THRESHOLD=0
TEST_DATABASE_URL=memory://test

# Deployment
DEPLOYMENT_ENV=ci
HEALTH_CHECK_ENABLED=false
