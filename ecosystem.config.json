{
  "apps": [
    {
      "name": "kcs-backend",
      "script": "bun",
      "args": "run src/index.ts",
      "cwd": "/home/ubuntu/KCS-Backend",
      "instances": 1,
      "exec_mode": "fork",
      "watch": false,
      "max_memory_restart": "1G",
      "env": {
        "NODE_ENV": "production",
        "PORT": "4500",
        "SOCKET_PORT": "4501"
      },
      "env_development": {
        "NODE_ENV": "development",
        "PORT": "4500",
        "SOCKET_PORT": "4501"
      },
      "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
      "error_file": "/home/ubuntu/logs/kcs-backend-error.log",
      "out_file": "/home/ubuntu/logs/kcs-backend-out.log",
      "log_file": "/home/ubuntu/logs/kcs-backend-combined.log",
      "merge_logs": true,
      "time": true,
      "autorestart": true,
      "restart_delay": 1000,
      "max_restarts": 10,
      "min_uptime": "10s"
    }
  ]
}
